<h1>New Game</h1>

<% @letters.each do |random_letter| %>
  <span class='letter'><%=random_letter%></span>
<% end %>

<p>What is the longest word you could find ?</p>
<form action='/score' method='post' data-turbo="false">
  <input type="text" name='word' value='<%= params[:word] %>'>
  <input type="submit" value='Lets go !'>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>
